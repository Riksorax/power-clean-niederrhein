<section id="leistungen" class="section-padding bg-beige-sand">
    <div class="container">
        <h2 class="text-center fw-bold text-moss-green mb-5 fs-1">Unsere Kernleistungen</h2>
        <div class="row g-4">
            @{
                // Die Klasse ServiceViewModel kommt jetzt aus PowerCleanNiederrhein.Data
                var services = new List<ServiceViewModel>
                {
                    new ServiceViewModel { Title = "Terrassenreinigung", Description = "Wir befreien Ihre Terrasse von Moos, Algen und Schmutz – für einladende Stunden im Freien.", ImageUrl = "/images/TerraceCleaning.webp", AltText = "Terrassenreinigung" },
                    new ServiceViewModel { Title = "Gehwegreinigung", Description = "Sichere und saubere Wege. Wir reinigen Pflastersteine, Betonflächen und mehr.", ImageUrl = "/images/SidewalkCleaning.webp", AltText = "Gehwegreinigung" },
                    new ServiceViewModel { Title = "Balkonreinigung", Description = "Genießen Sie Ihren Balkon wieder in voller Pracht. Wir entfernen Schmutz und Beläge schonend.", ImageUrl = "/images/BalconyCleaning.webp", AltText = "Balkonreinigung" },
                    new ServiceViewModel { Title = "Auffahrtreinigung", Description = "Ein sauberer Empfang: Wir reinigen Ihre Auffahrt von Moos und Witterungseinflüssen", ImageUrl = "/images/DrivewayCleaning.webp", AltText = "Auffahrtreinigung" },
                    new ServiceViewModel { Title = "Parkplatzreinigung", Description = "Für einen gepflegten ersten Eindruck: Professionelle Reinigung von Parkflächen für Privat und Gewerbe.", ImageUrl = "/images/ParkingLotCleaning.webp", AltText = "Parkplatzreinigung" },
                    new ServiceViewModel { Title = "Winterdienst", Description = "Sicher durch den Winter: Wir übernehmen zuverlässig das Schneeräumen und Streuen auf Ihren Wegen und Flächen.", ImageUrl = "/images/WinterService.webp", AltText = "Winterdienst" }
                };
            }

            @foreach (var service in services)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm bg-off-white">
                        <img src="@service.ImageUrl" class="card-img-top-custom" alt="@service.AltText" onerror="this.src='https://placehold.co/600x400/cccccc/FFFFFF?text=Bild+nicht+gefunden'">
                        <div class="card-body">
                            <h3 class="card-title fs-4 fw-semibold text-moss-green mb-3">@service.Title</h3>
                            <p class="card-text text-dark-gray">@service.Description</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>